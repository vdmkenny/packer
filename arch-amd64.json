{
  "builders": [{
    "type": "virtualbox-iso",
    "headless": false,

    "guest_os_type": "ArchLinux_64",

    "iso_url": "/home/bjanssens/Downloads/iso/archlinux-2016.04.01-dual.iso",
    "iso_checksum": "56fac9b3eefdf254a53e519dfcb05168",
    "iso_checksum_type": "md5",

    "boot_command": [
      "<tab> script=http://{{ .HTTPIP }}:{{ .HTTPPort }}/arch/pre-install.sh<enter>"
    ],
    "boot_wait": "5s",

    "http_directory": "http",
    "virtualbox_version_file": "/home/vagrant/.vbox_version",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "3600s",
    "ssh_pty" : "true",

    "disk_size": 10240,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now"
  }],

  "post-processors": [{
    "output": "build/arch-amd64-{{.Provider}}.box",
    "type": "vagrant"
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
    "scripts": [
      "scripts/arch/install_short.sh"
    ]
  }]
}
